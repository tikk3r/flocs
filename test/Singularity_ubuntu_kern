Bootstrap: docker
From: ubuntu:18.04

%environment
    . /usr/bin/init.sh

%post
	# General environment settings.
	export PYTHON_VERSION=2.7
    export HDF5_VERSION=1.10.4
    export WSCLEAN_VERSION=2.6
    export LD_LIBRARY_PATH=/opt/hdf5/lib:$LD_LIBRARY_PATH
    
	apt -y update
	apt -y install software-properties-common
	add-apt-repository -s ppa:kernsuite/kern-4
	apt-add-repository multiverse
	apt -y update
	apt -y install patch sudo git subversion less vim wget cmake
	apt -y install python-pip
    
    #
    # install-hdf5
    #
    #mkdir -p /opt/hdf5
    #cd /opt/hdf5 && wget https://support.hdfgroup.org/ftp/HDF5/releases/hdf5-1.10/hdf5-1.10.4/src/hdf5-1.10.4.tar.gz
    #cd /opt/hdf5 && wget https://support.hdfgroup.org/ftp/HDF5/releases/hdf5-1.8/hdf5-1.8.21/src/hdf5-1.8.21.tar.gz
    #cd /opt/hdf5 && tar xf hdf5*.tar.gz
    #cd /opt/hdf5/hdf5*/ && ./configure --prefix=/opt/hdf5 --enable-parallel --enable-threadsafe --disable-hl
    #cd /opt/hdf5/hdf5*/ && make -j ${J}
    #cd /opt/hdf5/hdf5*/ && make install

	# Install the LOFAR software.
	#apt -y install casacore-* hdf5-tools libhdf5-100 libhdf5-dev libboost-all-dev libcfitsio5 libcfitsio-bin libcfitsio-dev libfftw3-bin libfftw3-dev libgsl23 libgsl-dev dysco dyscostma-dev python-casacore lofar lofar-dev factor python-gsm prefactor factor
	apt -y install casacore-* libboost-all-dev libcfitsio5 libcfitsio-bin libcfitsio-dev libfftw3-bin libfftw3-dev libgsl23 libgsl-dev dysco dyscostma-dev python-casacore lofar lofar-dev factor python-gsm prefactor factor pybdsf

    mkdir -p /opt/lsmtool/lib/python2.7/site-packages
    # Install LSMTool
    cd /opt/lsmtool
    git clone https://github.com/darafferty/LSMTool.git
    export PYTHONPATH=/opt/lsmtool/lib/python2.7/site-packages:$PYTHONPATH
    cd LSMTool && python setup.py install --prefix=/opt/lsmtool

    mkdir -p /opt/losoto/lib/python2.7/site-packages
    # Install LSMTool
    cd /opt/losoto
    git clone https://github.com/revoltek/losoto.git
    export PYTHONPATH=/opt/losoto/lib/python2.7/site-packages:$PYTHONPATH
    cd losoto && python setup.py install --prefix=/opt/losoto

    mkdir /opt/wsclean
    cd /opt/wsclean && wget http://downloads.sourceforge.net/project/wsclean/wsclean-${WSCLEAN_VERSION}/wsclean-${WSCLEAN_VERSION}.tar.bz2 && tar -xjf wsclean-${WSCLEAN_VERSION}.tar.bz2 && cd wsclean-${WSCLEAN_VERSION} && ls && mkdir build && cd build && ls && cmake .. -DCMAKE_PREFIX_PATH="/usr/lib:/usr/lib64" -DCMAKE_INSTALL_PREFIX=/opt/wsclean && make -j ${J} && make install && rm -rf wsclean-${WSCLEAN_VERSION}.tar.bz2

	python -m pip install --upgrade pip
	python -m pip install --upgrade setuptools
	python -m pip install --upgrade numpy astropy scipy matplotlib numexpr tables pyregion

	# FACTOR requisites.
	python -m pip install pyparsing

    echo source /usr/bin/init.sh >> $HOME/.bashrc
    echo export PYTHONPATH=/usr/lib/python2.7/dist-packages/lofar:/usr/lib/python2.7/dist-packages/lofarpipe/recipes/plugins/:/usr/lib/prefactor/plugins:/usr/lib/prefactor/scripts:/opt/lsmtool/lib/python2.7/site-packages:/opt/losoto/lib/python2.7/site-packages:\$PYTHONPATH > /usr/bin/init.sh
    echo export PATH=/opt/lsmtool/bin:/opt/losoto/bin:/opt/wsclean/bin:\$PATH >> /usr/bin/init.sh
    echo export LD_LIBRARY_PATH=/opt/hdf5/lib:/opt/wsclean/lib:\$LD_LIBRARY_PATH >> /usr/bin/init.sh

%runscript
    . /usr/bin/init.sh
