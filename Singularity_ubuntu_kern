Bootstrap: docker
From: ubuntu:18.04

%post
	# General environment settings.
	export PYTHON_VERSION=2.7

	apt -y install software-properties-common
	add-apt-repository -s ppa:kernsuite/kern-4
	apt-add-repository multiverse
	apt -y update
	apt -y install patch sudo
	apt -y install python-pip
	# Install the LOFAR software.
	apt -y install lofar losoto lsmtool rmextract dysco factor python-gsm

	python -m pip install --upgrade pip
	python -m pip install --upgrade setuptools
	python -m pip install --upgrade numpy astropy scipy matplotlib numexpr tables

	# FACTOR requisites.
	python -m pip install pyparsing
